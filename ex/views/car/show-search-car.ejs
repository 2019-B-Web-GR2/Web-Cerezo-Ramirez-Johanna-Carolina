<%- include('../sharedViews/header')%>


<div class="container">

    <% if(datos.mensaje){ %>
        <div class="alert alert-primary" role="alert">
            <%= datos.mensaje %>
        </div>
    <% } %>

    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <%
    }
    %>



    <h1>Ruta show car </h1>
    <a href="create-car">
        <button type="button"
                class="btn btn-danger">
            Crear car
        </button>
    </a>

    <form action="/car/mostrar-cars"
          method="GET">
        <div>
            <label for="consultaID">Buscar Car</label>
            <input id="consultaID"
                   type="text"
                   placeholder="EJ: "
                   title="Ingresar buscqueda por  chassis, color, etc"
                   name="consultaOwner"
                   class="form-control">
            <small id="cedulaIDHelp"
                   class="form-text text-muted">
                Puede buscar por chassis, color, etc.
            </small>
        </div>

    </form>

    <%- include('./show-cars-table',{
    cars: datos.cars
    })
    %>

</div>





<%- include('../sharedViews/footer')%>

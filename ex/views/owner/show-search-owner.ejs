<%- include('../sharedViews/header')%>


<div class="container">

    <% if(datos.mensaje){ %>
        <div class="alert alert-primary" role="alert">
            <%= datos.mensaje %>
        </div>
    <% } %>

    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <%
    }
    %>



    <h1>Ruta show owner </h1>
    <a href="create-owner">
        <button type="button"
                class="btn btn-danger">
            Crear owner
        </button>
    </a>

    <form action="/owner/mostrar-owners"
          method="GET">
        <div>
            <label for="consultaID">Buscar Owner</label>
            <input id="consultaID"
                   type="text"
                   placeholder="EJ: 0751010414 o Joha"
                   title="Ingresar buscqueda por nombre o por cedula"
                   name="consultaOwner"
                   class="form-control">
            <small id="cedulaIDHelp"
                   class="form-text text-muted">
                Puede buscar por cedula, apellido o nombre
            </small>
        </div>

    </form>

    <%- include('./show-owners-table',{
    owners: datos.owners
    })
    %>

</div>





<%- include('../sharedViews/footer')%>
